<%= form_with model: todoitem do |form| %>

  <div>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
    <%= todoitem.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %>
    <br>
    <%= form.text_area :body %>
    <%= todoitem.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>
